    <h2 style="text-align: center;">Crear un producto</h2>



    <!-- formulario -->

    <div class="container-body text-center">

        <div class="container-body-img">
            <img src="/images/fondo_vino_recortado.jpg" alt="">
        </div>

        <div class="container-detail">


            <form action="/productos/guardar" method="POST" enctype="multipart/form-data">

                <div class="login-container">
                    <!-- si no se usa archivos file en el form no usar enctype -->

                    <div>
                        <label for="nombreArt">Articulo</label>
                        <input style="font-size:13px; " type="text" name="nombre" class="form-control" id="nombreArt"
                            aria-describedby="nombreArt" placeholder="Ingrese el nombre del vino">
                    </div>


                    <label for="Categoria" class="">Categoria</label>
                    <select class="form-control" style="font-size:13px; " name="categoria" id="Categoria">
                        <option value="Blanco">Vinos Blancos</option>
                        <option value="Tinto">Vinos Tintos</option>
                        <option value="Espumeantes">Vinos Espumantes</option>
                    </select>


                    <div>
                        <label for="Precio" class="">Precio </label>
                        <input style="font-size:13px; " type="number" name="precio" class="form-control" id=" Precio"
                            placeholder="$ Precio">
                    </div>

                    <div>
                        <label for="Archivo" >Imagen de Articulo</label>
                        <input style="font-size:13px" class="form-control " class="form-control-btn btn btn-danger"
                            type="file" id="Archivo" name="imagen" required="true">
                    </div>


                    <label>Descripcion</label> <br>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Escriba una descripcion" style="height: 100px"
                            name="descripcion"></textarea>
                        <label for="floatingTextarea2">Escriba una descripcion</label>
                    </div>
                    <br>
                    <div>
                        <button type="submit" class="form-control-btn btn btn-danger">Guardar</button>
                    </div>
            </form>
            <br>
